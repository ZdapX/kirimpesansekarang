<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html-to-image/1.11.11/html-to-image.min.js"></script>
    <title>Inbox - NGL</title>
</head>
<body class="bg-black text-white p-4 md:p-10">
    <div class="max-w-2xl mx-auto">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl font-black italic tracking-tighter">INBOX</h1>
            <a href="/logout" class="text-[10px] border border-gray-700 px-4 py-2 rounded-full font-bold opacity-50">LOGOUT</a>
        </div>

        <!-- Copy Link -->
        <div class="bg-[#0a0a0a] border border-[#1a1a1a] p-6 rounded-[2.5rem] mb-10 text-center">
            <p class="text-[10px] text-gray-600 uppercase tracking-[0.2em] mb-3">Link Profile Kamu</p>
            <button onclick="copyLink()" id="btnCopy" class="w-full bg-[#111] p-4 rounded-2xl text-red-500 font-mono text-xs border border-[#222]">
                yukkirimpesan.vercel.app/u/<%= user %>
            </button>
        </div>

        <!-- Messages Grid -->
        <div class="grid grid-cols-2 gap-3">
            <% if(messages.length == 0) { %>
                <p class="col-span-2 text-center text-gray-700 py-20">Kosong...</p>
            <% } %>

            <% messages.forEach(m => { %>
            <div onclick="openPreview('<%= m.text.replace(/'/g, "\\'") %>')" class="bg-[#0d0d0d] border border-[#1a1a1a] p-5 rounded-[2rem] active:scale-95 transition cursor-pointer relative">
                <div class="flex justify-between items-center mb-2">
                    <div class="w-2 h-2 bg-red-600 rounded-full shadow-[0_0_10px_red]"></div>
                    <form action="/delete-message" method="POST" onsubmit="event.stopPropagation()">
                        <input type="hidden" name="msgId" value="<%= m._id %>">
                        <button class="text-[8px] text-gray-800 font-bold uppercase">Hapus</button>
                    </form>
                </div>
                <p class="text-sm font-semibold line-clamp-3">"<%= m.text %>"</p>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- PREVIEW MODAL -->
    <div id="modal" class="hidden fixed inset-0 bg-black/95 z-50 flex flex-col items-center justify-center p-6">
        <div id="captureArea" class="w-full max-w-[340px] aspect-[9/16] bg-red-600 rounded-[3rem] p-10 flex flex-col items-center justify-center text-center relative shadow-2xl">
            <div class="bg-white text-black p-8 rounded-[2.5rem] w-full shadow-2xl">
                <p class="text-[10px] text-gray-400 font-black uppercase tracking-widest mb-4">kirim pesan anonim!</p>
                <p id="previewText" class="text-xl font-bold leading-tight">"..."</p>
            </div>
            <div class="mt-8">
                <p class="text-white font-black italic tracking-tighter">NGL.LINK</p>
                <p class="text-[8px] text-white/50 uppercase tracking-[0.3em]">yukkirimpesan.vercel.app</p>
            </div>
        </div>
        
        <button onclick="downloadImg()" class="mt-10 bg-white text-black px-8 py-4 rounded-full font-black text-xs uppercase tracking-widest shadow-xl">Download Story</button>
        <button onclick="document.getElementById('modal').classList.add('hidden')" class="mt-4 text-gray-500 text-xs uppercase font-bold">Tutup</button>
    </div>

    <script>
        function openPreview(txt) {
            document.getElementById('previewText').innerText = `"${txt}"`;
            document.getElementById('modal').classList.remove('hidden');
        }

        function downloadImg() {
            const node = document.getElementById('captureArea');
            htmlToImage.toPng(node).then(dataUrl => {
                const link = document.createElement('a');
                link.download = 'ngl-story.png';
                link.href = dataUrl;
                link.click();
            });
        }

        function copyLink() {
            const btn = document.getElementById('btnCopy');
            navigator.clipboard.writeText(btn.innerText.trim());
            btn.innerText = "TERSALIN!";
            setTimeout(() => { btn.innerText = "kirimpesansekarang.vercel.app/u/<%= user %>" }, 2000);
        }
    </script>
</body>
</html>
